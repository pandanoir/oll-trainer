{
  "compilerOptions": {
    "target": "es2015",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": [
      "esnext.asynciterable",
      "dom",
      "es2020",
      "es2017.intl",
      "es2018.intl",
      "esnext.intl"
    ],
    "esModuleInterop": true,
    "sourceMap": true,
    "strict": true,
    "baseUrl": ".",
    "types": [
      "node",
      "jest",
      "vite/client"
    ],
    "noEmit": true,
    "jsx": "react-jsx",
    "resolveJsonModule": true
  },
  "include": [
    "./src",
    "./src/types",
    "./jest.setup.ts"
  ]
}